        "/clients/{id}": {
            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Obtenir les détails d'un utilisateur",
                "description": "Renvoie les informations détaillées d'un utilisateur spécifique.",
                "operationId": "2965e9737f628d15ea88209095622c24",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Utilisateur trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "SUCCESS"
                                        },
                                        "data": {
                                            "properties": {
                                                "user": {
                                                    "$ref": "#/components/schemas/User"
                                                },
                                                "photo_base64": {
                                                    "type": "string",
                                                    "example": "base64encodedphoto"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Utilisateur non trouvé"
                    }
                }
            }
        },
        "/dettes": {
            "post": {
                "tags": [
                    "Dettes"
                ],
                "summary": "Get list of debts",
                "description": "Returns a list of debts. Optionally filter by status (Solde, NonSolde)",
                "operationId": "0765797cddff4763e641344ea5228c2a",
                "parameters": [
                    {
                        "name": "statut",
                        "in": "query",
                        "description": "Filter debts by status. Use 'Solde' for fully paid debts and 'NonSolde' for unpaid debts.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "Solde|NonSolde"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of debts retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Dette"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "StoreClientRequest": {
                "required": [
                    "surname",
                    "adresse",
                    "telephone",
                    "user"
                ],
                "properties": {
                    "surname": {
                        "type": "string",
                        "example": "Doe"
                    },
                    "adresse": {
                        "type": "string",
                        "example": "123 Rue Principale"
                    },
                    "telephone": {
                        "type": "string",
                        "example": "771234567"
                    },
                    "user": {
                        "required": [
                            "nom",
                            "prenom",
                            "login",
                            "password",
                            "roleId"
                        ],
                        "properties": {
                            "nom": {
                                "type": "string",
                                "example": "John"
                            },
                            "prenom": {
                                "type": "string",
                                "example": "Doe"
                            },
                            "login": {
                                "type": "string",
                                "example": "johndoe"
                            },
                            "password": {
                                "type": "string",
                                "example": "Password123!"
                            },
                            "roleId": {
                                "type": "integer",
                                "example": "3"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "ClientCollection": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/ClientResource"
                }
            },
            "ClientResource": {
                "title": "Client Resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "surname": {
                        "type": "string",
                        "example": "Doe"
                    },
                    "adresse": {
                        "type": "string",
                        "example": "123 Rue Principale"
                    },
                    "telephone": {
                        "type": "string",
                        "example": "778275234"
                    }
                },
                "type": "object"
            },
            "Article": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "libelle": {
                        "type": "string",
                        "example": "Article Example"
                    },
                    "prix": {
                        "type": "number",
                        "format": "float",
                        "example": 29.99
                    },
                    "quantite": {
                        "type": "integer",
                        "format": "int32",
                        "example": 100
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    },
                    "deleted_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    }
                },
                "type": "object"
            },
            "Client": {
                "required": [
                    "Surname",
                    "Telephone"
                ],
                "properties": {
                    "Surname": {
                        "type": "string",
                        "example": "John"
                    },
                    "Telephone": {
                        "type": "number",
                        "example": "77#######"
                    },
                    "Adresse": {
                        "type": "string",
                        "example": "123 Rue Principale"
                    }
                },
                "type": "object"
            },
            "Dette": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "date": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-01-01T00:00:00Z"
                    },
                    "montant": {
                        "type": "number",
                        "format": "float",
                        "example": 29.99
                    },
                    "montantDu": {
                        "type": "number",
                        "format": "float",
                        "example": 22.99
                    },
                    "montantRestant": {
                        "type": "number",
                        "format": "float",
                        "example": 7.99
                    },
                    "client_id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "article_details": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "id": {
                                    "type": "integer",
                                    "format": "int64",
                                    "example": 1
                                },
                                "article_id": {
                                    "type": "integer",
                                    "format": "int64",
